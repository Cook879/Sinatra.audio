					$output .= '<li><a href="' . $base_url . '/recording/' . $rec_id . '">' . get_recording_name($rec_id) . '</a></li>';
				}
			}
			$output .= '</ol>';
		}
		$output .= '</td>';		
	} else if ( $project_type == "television" ) {
		$output .= '<td class="table_contents">';
