function sort_session($a, $b) {
	$date_a = $a[0][3];
	$date_b = $b[0][3];
	
	if( $date_a > $date_b )
		return 1;
	if( $date_a < $date_b )
		return -1;
	
	$order_a = $a[0][4];
	$order_b = $b[0][4];
	
	if( $order_a > $order_b ) 
		return 1;
	if( $order_a < $order_b )
		return -1;
	
	return 0;
}
